    "import pandas as pd\n",
    "import numpy as np\n",
    "\n",
    "# Load the data\n",
    "data_path = '/mnt/data/BM2425.xlsx'\n",
    "df = pd.read_excel(data_path, sheet_name='Sheet1')\n",
    "\n",
    "# Step 1: Data Cleaning\n",
    "# Select relevant columns\n",
    "columns_to_keep = ['id', 'eventId', 'typeId', 'periodId', 'timeMin', 'timeSec', 'contestantId',\n",
    "                   'outcome', 'x', 'y', 'GoalMouthY', 'GoalMouthZ', 'isOwnGoal']\n",
    "data = df[columns_to_keep]\n",
    "\n",
    "# Handle missing values and convert data types if necessary\n",
    "data = data.dropna(subset=['contestantId', 'typeId', 'x', 'y'])\n",
    "data['time'] = data['timeMin'] * 60 + data['timeSec']  # Convert time to seconds\n",
    "\n",
    "# Step 2: Filter Offensive Events\n",
    "# Define event types (e.g., passes, shots, assists)\n",
    "offensive_events = {\n",
    "    'pass': [1, 2],   # Example typeIds for passes\n",
    "    'shot': [3],      # Example typeId for shots\n",
    "    'key_pass': [4],  # Example typeId for key passes\n",
    "}\n",
    "\n",
    "data['event_type'] = data['typeId'].map(lambda x: next((k for k, v in offensive_events.items() if x in v), 'other'))\n",
    "data = data[data['event_type'] != 'other']\n",
    "\n",
    "# Step 3: Group Events into Sequences\n",
    "# Define a sequence ID based on time and period\n",
    "sequence_gap = 10  # Maximum gap (in seconds) to consider events in the same sequence\n",
    "data['sequence_id'] = (data['time'].diff() > sequence_gap).cumsum()\n",
    "data['sequence_id'] = data['periodId'].astype(str) + '_' + data['sequence_id'].astype(str)\n",
    "\n",
    "# Step 4: Calculate Metrics for Chemistry\n",
    "# Initialize chemistry metrics\n",
    "chemistry_metrics = []\n",
    "\n",
    "# Loop through each sequence\n",
    "for sequence_id, sequence in data.groupby('sequence_id'):\n",
    "    players_involved = sequence['contestantId'].unique()\n",
    "    total_xg = sequence['GoalMouthZ'].sum()  # Example metric: Sum of xG or goal probability\n",
    "\n",
    "    # Pairwise interactions\n",
    "    for i, player_a in enumerate(players_involved):\n",
    "        for player_b in players_involved[i+1:]:\n",
    "            events_a = sequence[sequence['contestantId'] == player_a]\n",
    "            events_b = sequence[sequence['contestantId'] == player_b]\n",
    "\n",
    "            # Metrics\n",
    "            passes_between = ((events_a['event_type'] == 'pass') & (events_b['event_type'] == 'pass')).sum()\n",
    "            successful_passes = passes_between  # Assuming all passes are successful in this dataset\n",
    "            mutual_sequences = len(sequence)  # Both players involved in the same sequence\n",
    "            shots_created = ((events_a['event_type'] == 'key_pass') & (events_b['event_type'] == 'shot')).sum()\n",
    "            avg_distance = np.mean(np.sqrt((events_a['x'] - events_b['x'])**2 + (events_a['y'] - events_b['y'])**2))\n",
    "            xga_contribution = total_xg  # Total xG contributed by the pair\n",
    "            defensive_support = ((events_a['event_type'] == 'defense') & (events_b['event_type'] == 'defense')).sum()\n",
    "\n",
    "            chemistry_metrics.append({\n",
    "                'sequence_id': sequence_id,\n",
    "                'player_a': player_a,\n",
    "                'player_b': player_b,\n",
    "                'pass_success_rate': successful_passes / passes_between if passes_between > 0 else 0,\n",
    "                'mutual_sequences': mutual_sequences,\n",
    "                'shots_created': shots_created,\n",
    "                'avg_distance': avg_distance,\n",
    "                'xga_contribution': xga_contribution,\n",
    "                'defensive_support': defensive_support\n",
    "            })\n",
    "\n",
    "# Convert chemistry metrics to DataFrame\n",
    "chemistry_df = pd.DataFrame(chemistry_metrics)\n",
    "\n",
    "# Step 5: Aggregate Chemistry Scores\n",
    "# Sum up interaction metrics across all sequences\n",
    "chemistry_summary = chemistry_df.groupby(['player_a', 'player_b']).agg({\n",
    "    'pass_success_rate': 'mean',\n",
    "    'mutual_sequences': 'sum',\n",
    "    'shots_created': 'sum',\n",
    "    'avg_distance': 'mean',\n",
    "    'xga_contribution': 'sum',\n",
    "    'defensive_support': 'sum'\n",
    "}).reset_index()\n",
    "\n",
    "# Output the results\n",
    "import ace_tools as tools; tools.display_dataframe_to_user(name="On-Field Chemistry Metrics", dataframe=chemistry_summary)\n"
   ]
  }
